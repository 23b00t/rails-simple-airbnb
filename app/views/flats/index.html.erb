<div class="container">
  <h1>All our flats (<%=@flats.length%>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card m-2" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.description %></p>
          <%= link_to 'Details', flat_path(flat), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
